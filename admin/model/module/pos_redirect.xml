<modification>    <id>POS Auto Redirect</id>    <version>1.0</version>    <vqmver>2.x</vqmver>    <author>Jimmy: flyingmel.java@gmail.com, Jason: hh4cimm@yahoo.com</author>    <file name="admin/controller/common/login.php">		<operation>			<search position="replace"><![CDATA[$this->redirect($this->url->link('common/home', 'token=' . $this->session->data['token'], 'SSL'));]]></search>
			<add><![CDATA[$this->load->model('setting/setting');			$pos_settings = $this->model_setting_setting->getSetting('POS');			if ($pos_settings && isset($pos_settings['display_once_login']) && $pos_settings['display_once_login'] == '1') {				$this->redirect($this->url->link('module/POS/main', 'token=' . $this->session->data['token'], 'SSL'));			} else {				$this->redirect($this->url->link('common/home', 'token=' . $this->session->data['token'], 'SSL'));			}]]></add>
		</operation>    </file></modification>
